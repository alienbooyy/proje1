{
  "name": "proje1-pos",
  "version": "0.1.0",
  "private": true,
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "pkg . --targets node18-win-x64 --output dist/pos-system.exe",
    "package": "npm run build && node scripts/package.js",
    "verify": "node scripts/verify-dist.js",
    "clean": "rm -rf dist/ node_modules/"
  },
  "dependencies": {
    "express": "^4.19.2",
    "sqlite3": "^5.1.7",
    "exceljs": "^4.3.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "config.json"
    ],
    "outputPath": "dist"
  }
}
